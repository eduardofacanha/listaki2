<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/styles_background"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/box_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_DescriptionLogo_List"
                android:textColor="@color/branco"
                android:textSize="55sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvAki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_DescriptionLogo_Aki"
                android:textColor="@color/aki_amarelo"
                android:textSize="55sp"
                android:textStyle="italic" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtNomeCadastro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@layout/styles_edittext"
            android:drawableLeft="@drawable/usuario"
            android:drawablePadding="20dp"
            android:hint="Usuário"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/branco"
            android:typeface="normal" />

        <EditText
            android:id="@+id/edtEmailCadastro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@layout/styles_edittext"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="17dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/branco"
            android:typeface="normal" />

        <EditText
            android:id="@+id/edtSenhaCadastro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@layout/styles_edittext"
            android:drawableLeft="@drawable/cadeado"
            android:drawablePadding="23dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/branco"
            android:typeface="normal" />

        <EditText
            android:id="@+id/edtConfirmaSenhaCadastro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@layout/styles_edittext"
            android:drawableLeft="@drawable/cadeado"
            android:drawablePadding="23dp"
            android:hint="Confirmação de senha"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/branco"
            android:typeface="normal" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@layout/styles_buttons"
            android:text="Cadastrar"
            android:textSize="17sp" />

    </LinearLayout>
</ScrollView><!-- From: file:/Users/eduardofacanhaf/Documents/reposi2/listaki/codigofonte/listaki/res/layout/cadastro_usuario.xml -->